<UserControl x:Class="SilverUtil.VisualCircle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="5" Height="5">

	<Canvas 
		x:Name="TheCanvas"
        Width="5"
        Height="5"
		  RenderTransformOrigin="0.5,0.5"
        >
		<Ellipse
			x:Name="TheEllipse"
		Width="5"
		Height="5"
	>
			<Ellipse.Fill >
				<ImageBrush x:Name="TheImage" ImageSource="LargeTestGraphic.jpg"></ImageBrush>
			</Ellipse.Fill>
		</Ellipse>
	</Canvas>
</UserControl>
	
	
